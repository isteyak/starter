                                Foreground="{StaticResource ACPrimaryBlackTextBrush}"
                                IsChecked="{Binding RelativeSource={RelativeSource AncestorType={x:Type RibbonCheckBox}, Mode=FindAncestor}, Path=IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource {x:Type CheckBox}}" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="MenuBorder" Property="Background" Value="{StaticResource ACGrayBrush6}" />
                            <Setter TargetName="MenuBorder" Property="Effect" Value="{x:Null}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
